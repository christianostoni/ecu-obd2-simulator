[Unit]
Description= Start the obd2 simulator
Documentation= https://github.com/christianostoni/ecu-obd2-simulator
[Service]
Type=simple
WorkingDirectory= /home/pi/obd2_simulator_project
ExecStartPre=sudo ip link set can0 up type can bitrate 125000
ExecStart= /home/pi/obd2_simulator_project/venv/bin/python3 /home/pi/obd2_simulator_project/src/main.py
[Install]
WantedBy= multi-user.target
